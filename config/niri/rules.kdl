// Window rules
// https://yalter.github.io/niri/Configuration:-Window-Rules

// Work around WezTerm's initial configure bug
window-rule {
    match app-id=r#"^org\.wezfurlong\.wezterm$"#
    default-column-width {}
}

// Firefox picture-in-picture as floating
window-rule {
    match app-id=r#"firefox$"# title="^Picture-in-Picture$"
    open-floating true
}

// Screensaver fullscreen
window-rule {
    match app-id="org.nova.screensaver"
    open-fullscreen true
    focus-ring { off; }
    border { off; }
}

// Floating terminal for presentations
window-rule {
    match app-id="nova.floating"
    open-floating true
}

// Block password managers from screen capture
/-window-rule {
    match app-id=r#"^org\.keepassxc\.KeePassXC$"#
    match app-id=r#"^org\.gnome\.World\.Secrets$"#
    block-out-from "screen-capture"
}

// Rounded corners for all windows
/-window-rule {
    geometry-corner-radius 12
    clip-to-geometry true
}

// Default transparency for inactive windows (like Omarchy)
window-rule {
    match is-active=false
    opacity 0.95
}

// Full opacity for media/video apps
window-rule {
    match app-id=r#"^(mpv|vlc|imv|com\.obsproject\.Studio|org\.kde\.kdenlive|org\.gnome\.NautilusPreviewer)$"#
    opacity 1.0
}

// Media and utility apps as floating (like omarchy)
window-rule {
    match app-id=r#"^(imv|mpv|org\.gnome\.Evince|org\.gnome\.NautilusPreviewer|com\.gabm\.satty|org\.gnome\.Calculator)$"#
    open-floating true
}

// Full opacity for games
window-rule {
    match app-id=r#"^(steam|com\.libretro\.RetroArch)$"#
    opacity 1.0
}

// Browser windows - subtle transparency
window-rule {
    match app-id=r#"^(firefox|zen-browser|chromium|brave-browser|google-chrome|vivaldi).*$"#
    opacity 0.97
}

// Full opacity for video content
window-rule {
    match app-id=r#"^(firefox|zen-browser|chromium|brave-browser|google-chrome).*$"# title=r#".*(YouTube|Netflix|Twitch|Zoom).*"#
    opacity 1.0
}

// Terminal windows
window-rule {
    match app-id=r#"^(Alacritty|kitty|foot|footclient|com\.mitchellh\.ghostty)$"#
    opacity 0.97
}

// Steam - float and full opacity
window-rule {
    match app-id="steam"
    open-floating true
    opacity 1.0
}

// JetBrains - full opacity
window-rule {
    match app-id=r#"^jetbrains-.*$"#
    opacity 1.0
}

// Chromium PiP (Firefox already has rule above)
window-rule {
    match app-id=r#"^(chromium|brave-browser|google-chrome).*$"# title=r#"Picture.in.Picture"#
    open-floating true
    opacity 1.0
    focus-ring { off; }
    border { off; }
}

// 1Password - block from screen capture
window-rule {
    match app-id=r#"^1[Pp]assword$"#
    open-floating true
    block-out-from "screen-capture"
}

// Bitwarden
window-rule {
    match app-id=r#"^(Bitwarden|com\.bitwarden\.desktop)$"#
    open-floating true
    block-out-from "screen-capture"
}

// GTK file dialogs as floating
window-rule {
    match title=r#"^(Open|Save|Save As|Select|Choose|Export|Import).*"#
    open-floating true
}

// LocalSend floating
window-rule {
    match app-id=r#"^(localsend|org\.localsend\.localsend_app)$"#
    open-floating true
}

// TUI apps floating
window-rule {
    match app-id=r#"^nova\.(btop|wiremix|bluetui|lazydocker|lazygit)$"#
    open-floating true
}
