// Window rules
// https://yalter.github.io/niri/Configuration:-Window-Rules

// Work around WezTerm's initial configure bug
window-rule {
    match app-id=r#"^org\.wezfurlong\.wezterm$"#
    default-column-width {}
}

// Firefox picture-in-picture as floating
window-rule {
    match app-id=r#"firefox$"# title="^Picture-in-Picture$"
    open-floating true
}

// Screensaver fullscreen
window-rule {
    match app-id="org.nova.screensaver"
    open-fullscreen true
    focus-ring { off; }
    border { off; }
}

// Floating terminal for presentations
window-rule {
    match app-id="nova.floating"
    open-floating true
}

// Block password managers from screen capture
/-window-rule {
    match app-id=r#"^org\.keepassxc\.KeePassXC$"#
    match app-id=r#"^org\.gnome\.World\.Secrets$"#
    block-out-from "screen-capture"
}

// Rounded corners for all windows
/-window-rule {
    geometry-corner-radius 12
    clip-to-geometry true
}

// Default transparency for inactive windows (like Omarchy)
window-rule {
    match is-active=false
    opacity 0.95
}

// Full opacity for media/video apps
window-rule {
    match app-id=r#"^(mpv|vlc|imv|com\.obsproject\.Studio|org\.kde\.kdenlive|org\.gnome\.NautilusPreviewer)$"#
    opacity 1.0
}

// Media and utility apps as floating (like omarchy)
window-rule {
    match app-id=r#"^(imv|mpv|org\.gnome\.Evince|org\.gnome\.NautilusPreviewer|com\.gabm\.satty|org\.gnome\.Calculator)$"#
    open-floating true
}

// Full opacity for games
window-rule {
    match app-id=r#"^(steam|com\.libretro\.RetroArch)$"#
    opacity 1.0
}
