# Mako notification daemon configuration
# https://github.com/emersion/mako

# Position and sizing
anchor=top-right
default-timeout=5000
width=420
outer-margin=20
padding=10,15
border-size=2
max-icon-size=32
font=Maple Mono 12

# App-specific rules
[app-name=Spotify]
invisible=1

# Do-not-disturb mode
[mode=do-not-disturb]
invisible=true

[mode=do-not-disturb app-name=notify-send]
invisible=false

# Critical notifications stay visible
[urgency=critical]
default-timeout=0
layer=overlay

# Interactive notification actions
[summary~="Setup Wi-Fi"]
on-button-left=exec sh -c 'nova-notification-dismiss "Setup Wi-Fi"; nova-launch-wifi'

[summary~="Learn Keybindings"]
on-button-left=exec sh -c 'nova-notification-dismiss "Learn Keybindings"; nova-menu-keybindings'

include=~/.config/nova/current/theme/mako.ini
