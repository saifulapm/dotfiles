#!/bin/bash
# Toggle night light (wlsunset)
# Warm temperature (4000K) when enabled, kills process when disabled

if pgrep -x wlsunset > /dev/null; then
    pkill -x wlsunset
    notify-send "Night Light" "Disabled - Normal screen temperature"
else
    wlsunset -T 4000 -t 3500 &
    notify-send "Night Light" "Enabled - Warm screen temperature"
fi
