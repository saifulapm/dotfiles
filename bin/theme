#!/bin/bash

# Theme generator - generates configs from templates using colors.toml

DOTFILES="${DOTFILES:-$HOME/.dotfiles}"
THEMES_DIR="$DOTFILES/themes"
TEMPLATES_DIR="$DOTFILES/templates"
THEME_FILE="$HOME/.config/nova/current/theme.name"

# Convert hex to RGB (e.g., "#1e1e2e" -> "30,30,46")
hex_to_rgb() {
    local hex="${1#\#}"
    printf "%d,%d,%d" "0x${hex:0:2}" "0x${hex:2:2}" "0x${hex:4:2}"
}

# Generate configs from templates
generate_theme() {
    local name="$1"
    local colors_file="$THEMES_DIR/$name/colors.toml"

    if [[ ! -f "$colors_file" ]]; then
        echo "Theme not found: $name"
        echo "Available themes:"
        ls -1 "$THEMES_DIR"
        return 1
    fi

    # Create sed script for substitutions
    local sed_script=$(mktemp)

    # Parse colors.toml and generate substitutions
    while IFS='=' read -r key value; do
        # Skip comments and empty lines
        [[ "$key" =~ ^[[:space:]]*# ]] && continue
        [[ -z "$key" ]] && continue

        # Trim whitespace and quotes
        key=$(echo "$key" | xargs)
        value=$(echo "$value" | xargs | tr -d '"')

        # Standard: {{ key }} -> value
        echo "s|{{ $key }}|$value|g" >> "$sed_script"

        # Strip: {{ key_strip }} -> value without #
        echo "s|{{ ${key}_strip }}|${value#\#}|g" >> "$sed_script"

        # RGB: {{ key_rgb }} -> decimal RGB
        if [[ "$value" =~ ^# ]]; then
            local rgb=$(hex_to_rgb "$value")
            echo "s|{{ ${key}_rgb }}|$rgb|g" >> "$sed_script"
        fi
    done < "$colors_file"

    # Apply btop theme (use static file if exists, otherwise generate from template)
    mkdir -p "$HOME/.config/btop/themes"
    if [[ -f "$THEMES_DIR/$name/btop.theme" ]]; then
        cp "$THEMES_DIR/$name/btop.theme" "$HOME/.config/btop/themes/current.theme"
    else
        sed -f "$sed_script" "$TEMPLATES_DIR/btop.theme.tpl" > "$HOME/.config/btop/themes/current.theme"
    fi

    # Generate shell theme (FZF colors)
    sed -f "$sed_script" "$TEMPLATES_DIR/fzf.sh.tpl" > "$DOTFILES/shell/theme"

    # Generate ghostty theme
    mkdir -p "$HOME/.config/nova/current/theme"
    sed -f "$sed_script" "$TEMPLATES_DIR/ghostty.conf.tpl" > "$HOME/.config/nova/current/theme/ghostty.conf"

    # Generate niri colors
    mkdir -p "$HOME/.config/niri"
    sed -f "$sed_script" "$TEMPLATES_DIR/niri.kdl.tpl" > "$HOME/.config/niri/colors.kdl"

    # Generate fuzzel theme colors
    mkdir -p "$HOME/.config/nova/current/theme"
    sed -f "$sed_script" "$TEMPLATES_DIR/fuzzel-colors.ini.tpl" > "$HOME/.config/nova/current/theme/fuzzel-colors.ini"

    # Generate waybar theme CSS
    mkdir -p "$HOME/.config/nova/current/theme"
    sed -f "$sed_script" "$TEMPLATES_DIR/waybar.css.tpl" > "$HOME/.config/nova/current/theme/waybar.css"

    # Generate alacritty theme
    sed -f "$sed_script" "$TEMPLATES_DIR/alacritty.toml.tpl" > "$HOME/.config/nova/current/theme/alacritty.toml"

    # Generate foot colors
    sed -f "$sed_script" "$TEMPLATES_DIR/foot-colors.ini.tpl" > "$HOME/.config/nova/current/theme/foot-colors.ini"

    # Generate mako config
    mkdir -p "$HOME/.config/mako"
    sed -f "$sed_script" "$TEMPLATES_DIR/mako.ini.tpl" > "$HOME/.config/mako/config"

    # Generate mako config to nova theme dir and symlink
    sed -f "$sed_script" "$TEMPLATES_DIR/mako.ini.tpl" > "$HOME/.config/nova/current/theme/mako.ini"
    mkdir -p ~/.config/mako
    ln -snf ~/.config/nova/current/theme/mako.ini ~/.config/mako/config
 
    # Generate swaylock config
    mkdir -p "$HOME/.config/swaylock"
    sed -f "$sed_script" "$TEMPLATES_DIR/swaylock.conf.tpl" > "$HOME/.config/swaylock/config"

    # Set GNOME/GTK theme for file manager (handles light/dark mode and icon theme)
    nova-theme-set-gnome "$name" 2>/dev/null || true

    # Reload niri if running
    if command -v niri &>/dev/null && niri msg version &>/dev/null 2>&1; then
        niri msg action reload-config 2>/dev/null || true
    fi

    # Save current theme name
    mkdir -p "$(dirname "$THEME_FILE")"
    echo "$name" > "$THEME_FILE"

    # Set background for theme
    if command -v nova-bg-next &>/dev/null; then
        nova-bg-next
    fi

    # Reload waybar
    pkill -SIGUSR2 waybar 2>/dev/null || true

    # Reload foot colors using OSC escape sequences
    nova-reload-foot-colors 2>/dev/null || true

    # Reload mako
    makoctl reload 2>/dev/null || true

    # Reload SwayOSD
    nova-restart-swayosd 2>/dev/null || true

    # Set browser theme (requires restart)
    nova-theme-set-browser 2>/dev/null || true

    # Run user hook
    nova-hook theme-set "$name" 2>/dev/null || true

    rm "$sed_script"

    echo "Theme applied: $name"
    echo "Restart terminal for full effect"
}

case "$1" in
    set)
        if [[ -z "$2" ]]; then
            echo "Usage: theme set <name>"
            echo "Available themes:"
            ls -1 "$THEMES_DIR"
            exit 1
        fi
        generate_theme "$2"
        ;;
    list)
        ls -1 "$THEMES_DIR"
        ;;
    current)
        if [[ -f "$THEME_FILE" ]]; then
            cat "$THEME_FILE"
        else
            echo "none"
        fi
        ;;
    *)
        echo "Usage: theme [set <name>|list|current]"
        echo ""
        echo "Commands:"
        echo "  set <name>  Apply a theme"
        echo "  list        List available themes"
        echo "  current     Show current theme"
        ;;
esac
