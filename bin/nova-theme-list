#!/bin/bash

# Nova Theme List
# Lists all available themes

USER_THEMES_PATH="$HOME/.config/nova/themes"
NOVA_THEMES_PATH="$HOME/.dotfiles/themes/colors"

{
    # User themes (if any)
    if [[ -d "$USER_THEMES_PATH" ]]; then
        find "$USER_THEMES_PATH" -mindepth 1 -maxdepth 1 \( -type d -o -type l \) -printf '%f\n' 2>/dev/null
    fi
    # System themes
    find "$NOVA_THEMES_PATH" -mindepth 1 -maxdepth 1 -type d -printf '%f\n' 2>/dev/null
} | sort -u | while read -r name; do
    # Format theme name nicely (capitalize words, replace dashes with spaces)
    echo "  $name" | sed -E 's/(^|-)([a-z])/\1\u\2/g; s/-/ /g'
done
