#!/bin/bash

# Nova Theme Setter
# Sets the color theme across all applications

if [[ -z $1 ]]; then
    echo "Usage: nova-theme-set <theme-name>"
    echo ""
    echo "Available themes:"
    nova-theme-list
    exit 1
fi

CURRENT_THEME_PATH="$HOME/.config/nova/current/theme"
NEXT_THEME_PATH="$HOME/.config/nova/current/next-theme"
USER_THEMES_PATH="$HOME/.config/nova/themes"
NOVA_THEMES_PATH="$HOME/.dotfiles/themes/colors"

THEME_NAME=$(echo "$1" | sed -E 's/<[^>]+>//g' | tr '[:upper:]' '[:lower:]' | tr ' ' '-')

# Check user themes first, then system themes
if [[ -d "$USER_THEMES_PATH/$THEME_NAME" ]]; then
    THEME_PATH="$USER_THEMES_PATH/$THEME_NAME"
elif [[ -d "$NOVA_THEMES_PATH/$THEME_NAME" ]]; then
    THEME_PATH="$NOVA_THEMES_PATH/$THEME_NAME"
else
    echo "Theme '$THEME_NAME' does not exist"
    echo ""
    echo "Available themes:"
    nova-theme-list
    exit 1
fi

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

echo "Setting theme: $THEME_NAME"

# Setup clean next theme directory (for atomic theme config swapping)
rm -rf "$NEXT_THEME_PATH"
mkdir -p "$NEXT_THEME_PATH"

# Copy static configs from theme
cp -r "$THEME_PATH/"* "$NEXT_THEME_PATH/" 2>/dev/null

# Generate dynamic configs from templates
"$SCRIPT_DIR/nova-theme-set-templates"

# Swap next theme in as current (atomic operation)
rm -rf "$CURRENT_THEME_PATH"
mv "$NEXT_THEME_PATH" "$CURRENT_THEME_PATH"

# Store theme name for reference
echo "$THEME_NAME" > "$HOME/.config/nova/current/theme.name"

# Change background with theme
"$SCRIPT_DIR/nova-theme-bg-next" 2>/dev/null

# Restart components to apply new theme
"$SCRIPT_DIR/nova-restart-waybar" 2>/dev/null
"$SCRIPT_DIR/nova-restart-mako" 2>/dev/null

# Reload niri config if running
if pgrep -x niri >/dev/null 2>&1; then
    # Niri auto-reloads config on file change
    touch ~/.config/niri/config.kdl 2>/dev/null
fi

# Change app-specific themes
"$SCRIPT_DIR/nova-theme-set-gnome" 2>/dev/null
"$SCRIPT_DIR/nova-theme-set-vscode" 2>/dev/null

# Call hook on theme set
"$SCRIPT_DIR/../bin/nova-hook" theme-set "$THEME_NAME" 2>/dev/null

echo "Theme '$THEME_NAME' applied successfully!"
