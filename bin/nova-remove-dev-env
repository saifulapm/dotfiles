#!/bin/bash
# Remove development environments

ENV="$1"

if [[ -z "$ENV" ]]; then
    echo "Usage: nova-remove-dev-env <environment>"
    exit 1
fi

case "$ENV" in
    ruby)
        echo "Removing Ruby..."
        mise uninstall ruby
        ;;
    node)
        echo "Removing Node.js..."
        mise uninstall node
        ;;
    bun)
        echo "Removing Bun..."
        mise uninstall bun
        ;;
    deno)
        echo "Removing Deno..."
        mise uninstall deno
        ;;
    go)
        echo "Removing Go..."
        mise uninstall go
        ;;
    python)
        echo "Removing Python..."
        mise uninstall python
        ;;
    rust)
        echo "Removing Rust..."
        rustup self uninstall -y 2>/dev/null || true
        ;;
    java)
        echo "Removing Java..."
        mise uninstall java
        ;;
    dotnet)
        echo "Removing .NET..."
        sudo dnf remove -y dotnet-sdk-8.0
        ;;
    *)
        echo "Unknown environment: $ENV"
        exit 1
        ;;
esac

echo "Done!"
